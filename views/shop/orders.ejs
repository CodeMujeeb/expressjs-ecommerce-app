<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <=0) { %>
            <h1>Nothing there!</h1>
            <% } else { %>
                <table class="table">
                    <th>Order Id</th>
                    <th>Products</th>
                    <th>Invoice</th>
                    <% orders.forEach(order => { %>
                        <tr>
                        <td class="centered"><%= order.id %></td>
                        <td class="">
                            <table class="table-no-border center">
                                <% order.products.forEach(product => { %>
                                <tr>
                                    <td><img src="<%= product.imageUrl %>" style="width:80px;height: 60px"></li>
                                    <td><span style="margin-left: 1em;">
                                        <%= product.title %>
                                    </span>
                                </td>
                                </tr>
                            <% }) %>
                            </table>
                        </td>
                        <td><a href="/orders/<%= order.id %>/invoice">Download Invoice</a></td>
                        </tr>
                    <% }) %>
                    </table>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>